# Flask secret for JWT signing
SECRET_KEY=change-me-please
# CORS allowed origin (frontend URL), e.g. http://localhost:8080 or deployed URL
CORS_ORIGIN=http://localhost:8080
# Firebase project settings
FIREBASE_PROJECT_ID=your-project-id
# Path to your service account key JSON file (download from Firebase console)
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
# Firebase Storage bucket name, like your-project-id.appspot.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
